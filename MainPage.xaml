<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ScoreTracker"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ScoreTracker.MainPage"
             NavigationPage.HasNavigationBar = "False">

    <toolkit:DockLayout
        VerticalOptions="Fill">
        <FlexLayout
            toolkit:DockLayout.DockPosition="Bottom"
            HeightRequest="50"
            Grid.Row="1"
            Direction="Row"
            Margin="10">
            <Button
                Text="Player count"
                Clicked="OnPlayerCountClicked"
                HorizontalOptions="Fill" 
                FlexLayout.Grow="1"
                Margin="2"/>
            <Button
                Text="Reset scores"
                Clicked="OnResetScoresClicked"
                HorizontalOptions="Fill" 
                FlexLayout.Grow="1"
                Margin="2"/>
        </FlexLayout>
        
        <ScrollView>
            <VerticalStackLayout
                x:Name="PlayersLayout"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"
                Margin="10"
                Spacing="17.5">
            </VerticalStackLayout>
        </ScrollView>
    </toolkit:DockLayout>

</ContentPage>
